@model IEnumerable<HocamNerede.tblHocalar>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Yeni Hoca", "Olustur")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.HocaName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HocaSurname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HocaMail)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.HocaName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HocaSurname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HocaMail)
        </td>
        <td>
            
            @Html.ActionLink("Bilgisi", "Bilgisi", new { id=item.HocaID }) |
            @Html.ActionLink("Sil", "Sil", new { id=item.HocaID })
        </td>
    </tr>
}

</table>
