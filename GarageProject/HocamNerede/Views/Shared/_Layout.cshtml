<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>@ViewBag.Title - Hocam Nerede ?</title>

	<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
	<link href="~/Content/Site.css" rel="stylesheet" />


	<style>



		.bg-blue {
			background-color: #509bf5;
		}

		@@media only screen {
			.secondBody {
				margin: 100px;
				border-style: inset;
			}
		}

		body {
			/* background: url(~/Scripts/images/resim1.jpg)**/
			background-size: cover !important;
			background-attachment: fixed !important;
			background-position: center !important;
		}
	</style>
</head>

<body style="background: url(Content/images/resim1.jpg);">

	<div class="secondBody">
		@*Header*@
		<div>

			<nav class="navbar navbar-dark bg-dark  navbar-expand-lg text-white">
				<div class="container">

					<a href="#" class="navbar-brand">Hocam Nerede ?</a>

					<button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbar-upper" aria-controls="navbar-upper">
						<span class="navbar-toggler-icon"> </span>
					</button>

					<div class=" collapse navbar-collapse" id="navbar-upper">
						<ul class="navbar-nav ml-lg-auto">
							<li class="nav-item">
								<a href="~/Hocalar" class="nav-link">Akademisyenler</a>
							</li>
							<li class="nav-item">
								<a href="~/Fakulteler" class="nav-link">Fakulteler</a>
							</li>
							<li class="nav-item">
								<a href="~/Okullar" class="nav-link">Okullar</a>
							</li>
							<li class="nav-item">
								<a href="~/Dersler" class="nav-link">Dersler</a>
							</li>
							<li class="nav-item">
								<a href="~/Bolumler" class="nav-link">Bolumler</a>
							</li>
						</ul>

					</div>

				</div>

			</nav>


			<section class="bg-blue py-5 col-xs-12 col-md-12">
				<div id="homeSlider" class="carousel slide" data-ride="carousel">
					<div class="carousel-inner text-center">
						<div class="carousel-item active">
							<h1 class="display-2">Birinci</h1>
						</div>
						<div class="carousel-item">
							<h1 class="display-2">İkinci</h1>
						</div>
					</div>
					<a href="#homeSlider" class="carousel-control-prev" data-slide="prev">
						<span class="carousel-control-prev-icon"></span>
					</a>
					<a href="#homeSlider" class="carousel-control-next" data-slide="next">
						<span class="carousel-control-next-icon"></span>

					</a>
				</div>

				<div>
					@RenderBody()


					@RenderSection("scripts", required: false)
				</div>
			</section>
		</div>



		@*	<section class="bg-blue py-5">Section 3</section>
			<section class="bg-blue py-5">Section 4</section>
			<section class="bg-blue py-5">Section 5</section> *@
		@*footer*@
		<div>

			<footer class="bg-dark py-5" style="color:aqua">
				<p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
			</footer>

		</div>
	</div>


	<script src="~/Scripts/jquery-3.4.1.min.js"></script>
	<script src="~/Scripts/jquery.validate.unobtrusive.min.js" type="text/javascript"></script>
	<script src="~/Scripts/jquery.validate.js" type="text/javascript"></script>
	<script src="~/Scripts/jquery.validate.min.js" type="text/javascript"></script>
	<script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
	<script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>